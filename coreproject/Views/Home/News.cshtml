



@model List<News>


    <section id="about" class="about">
        <div class="container aos-init aos-animate" data-aos="fade-up">

            <div class="section-title">
                <h2>الاخبار @ViewBag.cat</h2>
            </div>
            <center>
                @foreach (var item in Model)
                {
                    <div class="container">
                        <div class="row" style="margin:50px">
                            <div class="col-12">
                                <img src="~/images/News/@item.Image" class="img-fluid" style="height:500px;width:500px;" alt="">
                            </div>
                            <div class="col-12">
                                <h3>@item.Title</h3>
                                <h6>@item.Date</h6>
                                <p class="font-italic">
                                    @item.Topic
                                </p>
                            </div>

                        </div>
                    </div>
                   
                    <hr />
                }
            </center>

            </div>
    </section>